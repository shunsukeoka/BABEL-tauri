{
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.+(ts|tsx|js|jsx)", "**/?(*.)+(spec|test).+(ts|tsx|js|jsx)"],
    "transform": {
        "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "moduleNameMapper": {
        "@/(.*)": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": ["@testing-library/jest-dom/extend-expect"]
}
